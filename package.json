    "devDependencies": {
        "@types/chai": "^4.2.12",
        "@types/mocha": "^8.0.2",
        "@types/request": "^2.48.5",
        "chai": "^4.2.0",
        "mocha": "^8.1.1",
        "nyc": "^15.1.0",
        "source-map-support": "^0.5.19",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7"
    },
    "cloud-repo-tools": {
